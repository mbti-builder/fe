{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "moduleResolution": "node",
        "allowJs": true,
        "strict": true,
        "rootDir": "./",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
        }
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src"
    ]
}